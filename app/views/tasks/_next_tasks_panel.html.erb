<div class="section next_tasks_panel span4 collapsed" id="next-tasks-panel-<%= user.id %>" data-user="<%= user.id %>">
  <a class="collapsable-button">&nbsp;</a>
  <div class="page_header">
    <div><%= user.name %></div>
  </div>
  <div class="panel_content">
    <ul>
      <% count = 5 if ( count.nil? || count < 5) %>
      <% for task in user.next_tasks(count) %>
        <li>
          <b><%= link_to "##{task.task_num}", task_view_path(task.task_num), 'data-taskid' => task.id %></b> <%= task.name %> <small><%= ( "(" + worked_nice(task.duration) + ")" ) if task.duration > 0 %></small>
          <%= link_to "<i class=\"icon-move\"></i>".html_safe, "#", :title => "reorder task", :class => "pull-right" %>
        </li>
      <% end %>
    </ul>
    <div><a class="more_tasks" href ='#'>More...</a></div>
  </div>
</div>
