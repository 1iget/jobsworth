<% if @task %>
  <% @page_title = "Task ##{@task.task_num}: #{@task.name} - #{$CONFIG[:productName]}" %>
<% else %>
  <% @page_title = "Tasks - #{$CONFIG[:productName]}" %>
<% end %>

<%= render(:partial => "task_filters/search_filter", :locals => { :redirect_params => { :tag => params[:tag] }}) %>
<%= render(:partial => "task_filters/panel") %>
<%= render :partial => "tags/panel" %>

<ul class="nav nav-tabs">
  <li class="active"><a href="/tasks"><i class="icon-list"></i> List</a></li>
  <li><a href="/tasks/calendar"><i class="icon-calendar"></i> Calendar</a></li>
  <li><a href="/tasks/gantt"><i class="icon-align-left"></i> Gantt</a></li>
</ul>



<div id="task_grid"></div>
<div id="groupBy" class="clearfix"><%= select_tag("chngroup", options_for_changegroup) %></div>

<div id="task">
  <%= render_last_task.html_safe if @task %>
</div>

<script type="text/javascript">
  jQuery(function() {
    window.grid = new jobsworth.Grid({el: jQuery("#task_grid")[0]});
  })
</script>