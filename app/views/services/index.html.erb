<% content_for :navigation do %>
  <%= render :partial => "companies/navigation", :locals => {:selected => "services"} %>
<% end %>

<legend>
  Services
  <%= link_to _('New service'), new_service_path, :class => "btn pull-right" %>
</legend>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.name %></td>
    <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_service_path(service) %></td>
  </tr>
<% end %>
</table>

