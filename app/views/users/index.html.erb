<% @page_title = t("users.access_title", title: Setting.productName) %>

<legend>
  Users
  <%= link_to t("users.new_user"), new_user_path, :class => "pull-right" %>
</legend>

<% for user in @users %>
  <%= render :partial => "user", :locals => {:user => user} %>
<% end %>

<%= will_paginate(@users, { :next_label => t("button.next") + ' &raquo;'.html_safe, :prev_label => '&laquo; '.html_safe + t("button.prev") }) %>

