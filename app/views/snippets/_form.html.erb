<%= form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "required input-xxlarge" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, :style => "width:100%;", :class => "required" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
    <% unless @snippet.new_record? %>
      <%= link_to "Delete", snippet_path(@snippet), :method => "delete", :class => "btn btn-danger", :confirm => "Are you sure to delete this snippet?" %>
    <% end %>
  </div>
<% end %>

<script type="text/javascript">
  jQuery(function() {
    jQuery("form").validate();
  })
</script>

